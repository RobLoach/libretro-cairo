    $(CORE_DIR)/vendor/libretro-deps/freetype/src/base/ftfstype.c \
    $(CORE_DIR)/vendor/libretro-deps/freetype/src/base/ftgasp.c \
    $(CORE_DIR)/vendor/libretro-deps/freetype/src/base/ftglyph.c \

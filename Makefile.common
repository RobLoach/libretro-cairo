    $(CORE_DIR)/vendor/libretro-deps/freetype/src/winfonts/winfnt.c

# Pixman
SOURCES_C += $(wildcard \
    $(CORE_DIR)/vendor/libretro-deps/pixman/*.c \
)
FLAGS += -I$(CORE_DIR)/vendor/libretro-deps/pixman
FLAGS += -DWANT_PIXMAN

# Cairo
SOURCES_C += $(wildcard \
    $(CORE_DIR)/vendor/libretro-deps/cairo/src/*.c \
)
FLAGS += -I$(CORE_DIR)/vendor/libretro-deps/cairo/src
FLAGS += -DWANT_CAIRO

# Compilation
OBJECTS += $(SOURCES_CXX:.cpp=.o) $(SOURCES_C:.c=.o)

LDFLAGS +=  $(fpic) $(SHARED) $(EXTRA_LDF)

WARNINGS :=
